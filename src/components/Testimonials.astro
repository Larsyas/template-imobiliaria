---
const { testimonials } = Astro.props
---
<section id="depoimentos" class="section-padding bg-card/30">
  <div class="container-custom">
    <div class="text-center mb-12">
      <h2 class="heading-section text-foreground mb-4">Depoimentos</h2>
      <p class="text-muted-foreground max-w-2xl mx-auto">Histórias reais de quem já passou por aqui.</p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {testimonials?.map((t) => (
        <div class="card-premium rounded-2xl p-6">
          <div class="flex items-center gap-0.5 mb-4">
            {Array.from({ length: 5 }).map(() => (
              <svg class="h-4 w-4 text-primary fill-current" viewBox="0 0 24 24" aria-hidden="true">
                <path d="M12 17.27 18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z" />
              </svg>
            ))}
          </div>

          <p class="text-sm text-muted-foreground leading-relaxed mb-6">“{t.text}”</p>

          <div class="flex items-center justify-between">
            <div>
              <div class="text-sm font-semibold text-foreground">{t.author}</div>
              <div class="text-xs text-muted-foreground">{t.location}</div>
            </div>
            <svg class="h-6 w-6 text-primary/40" viewBox="0 0 24 24" fill="none" aria-hidden="true">
              <path d="M10 11H6a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2h3v7ZM20 11h-4a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2h3v7Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              <path d="M10 11v5a4 4 0 0 1-4 4" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
              <path d="M20 11v5a4 4 0 0 1-4 4" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
            </svg>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

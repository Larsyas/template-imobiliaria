---
const { hero, whatsapp, city, stats } = Astro.props
const whatsappLink = `https://wa.me/${whatsapp}?text=${encodeURIComponent("Olá! Gostaria de saber mais sobre seus serviços imobiliários.")}`
---
<section id="inicio" class="relative min-h-screen flex items-center justify-center overflow-hidden">
  <div class="absolute inset-0">
    <img src="/assets/hero-bg.jpg" alt="" class="w-full h-full object-cover opacity-40" loading="eager" />
    <div class="absolute inset-0 bg-gradient-to-b from-background/90 via-background/70 to-background"></div>
    <div class="absolute inset-0 bg-gradient-to-r from-background/60 via-transparent to-background/40"></div>
  </div>

  <div class="relative container-custom pt-28 pb-16 lg:pt-32 lg:pb-24">
    <div class="max-w-3xl">
      <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-card/60 border border-border/50 backdrop-blur mb-6">
        <svg class="h-4 w-4 text-primary" viewBox="0 0 24 24" fill="none" aria-hidden="true">
          <path d="M12 21s-6-4.35-6-10a6 6 0 0 1 12 0c0 5.65-6 10-6 10Z" stroke="currentColor" stroke-width="2"/>
          <circle cx="12" cy="11" r="2.5" stroke="currentColor" stroke-width="2"/>
        </svg>
        <span class="text-sm font-medium text-muted-foreground">{city}</span>
      </div>

      <h1 class="heading-display text-foreground mb-6">
        {hero?.title}
      </h1>

      <p class="text-lg md:text-xl text-muted-foreground leading-relaxed mb-8 max-w-2xl">
        {hero?.subtitle}
      </p>

      <div class="flex flex-col sm:flex-row gap-4 mb-10">
        <a href={whatsappLink} target="_blank" rel="noopener noreferrer" class="btn-primary px-8 py-4 text-base font-semibold inline-flex items-center justify-center gap-2">
          <svg class="h-5 w-5" viewBox="0 0 24 24" fill="none" aria-hidden="true">
            <path d="M20 11.08a8 8 0 1 1-9-7.92" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
            <path d="M20 4v7h-7" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
          <span>{hero?.ctaPrimary ?? "Falar no WhatsApp"}</span>
        </a>

        <a href="#imoveis" class="btn-secondary px-8 py-4 text-base font-semibold inline-flex items-center justify-center gap-2">
          <svg class="h-5 w-5" viewBox="0 0 24 24" fill="none" aria-hidden="true">
            <path d="M12 5v14" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
            <path d="m19 12-7 7-7-7" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
          <span>{hero?.ctaSecondary ?? "Ver Imóveis"}</span>
        </a>
      </div>

      <div class="flex flex-wrap items-center gap-6">
        <div class="flex items-center gap-2">
          <div class="flex items-center gap-0.5">
            {Array.from({ length: 5 }).map(() => (
              <svg class="h-4 w-4 text-primary fill-current" viewBox="0 0 24 24" aria-hidden="true">
                <path d="M12 17.27 18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z" />
              </svg>
            ))}
          </div>
          <span class="text-sm text-muted-foreground">{hero?.rating}</span>
        </div>

        <div class="hidden md:flex items-center gap-6">
          {stats?.slice(0, 3)?.map((s) => (
            <div class="text-center">
              <div class="text-2xl font-display font-semibold text-foreground">{s.value}</div>
              <div class="text-xs text-muted-foreground">{s.label}</div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>
